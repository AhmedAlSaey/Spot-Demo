{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["es2019"],
		"experimentalDecorators": true
	},
	"compileOnSave": true,
	"include": ["src", "dev-scripts"]
}
